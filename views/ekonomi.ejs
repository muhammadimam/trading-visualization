<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
  
    <!-- Custom CSS -->
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Angular JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.0/Chart.min.js"></script>
  </head>
  <body ng-app="indikator-ekonomi">
    <header>
      <nav class="navbar navbar-expand-md navbar-light bg-white fixed-top">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img src="/images/logo.png" width="45" height="45" class="d-inline-block align-middle" alt="Logo">
            <span>Trading Sector Visualization</span>
          </a>
          <ul class="navbar-link">
            <li>
              <a class="nav-link" href="/indikator-ekonomi">ECONOMIC INDICATOR</a>
            </li>
            <li>
              <a class="nav-link" href="/ekspor-impor">EXPORT/IMPORT</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main>
      <section class="section">
        <header class="section-header bg-orange">
          <div class="container">  
            <h3>ECONOMIC INDICATOR</h3>
          </div>
        </header>
        <div class="header__menu bg-orange">
          <div class="container">
            <ul class="nav nav-pills nav-fill" id="pills-tab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="pills-inflation-tab" data-toggle="pill" href="#pills-inflation" role="tab" aria-controls="pills-inflation" aria-expanded="true">Inflation</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="pills-exchange-tab" data-toggle="pill" href="#pills-exchange" role="tab" aria-controls="pills-exchange" aria-expanded="true">Exchange Rates</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="pills-gdp-tab" data-toggle="pill" href="#pills-gdp" role="tab" aria-controls="pills-gdp" aria-expanded="true">Gross Domestic Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="pills-trade-tab" data-toggle="pill" href="#pills-trade" role="tab" aria-controls="pills-trade" aria-expanded="true">Balance of Trade</a>
              </li>
            </ul>
          </div>
        </div>

        <div class="section-content">
          <div class="container">
            <div class="tab-content" id="pills-tabContent">
              <div class="tab-pane fade show active" id="pills-inflation" role="tabpanel" aria-labelledby="pills-inflation-tab">

                <div class="row">
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="foodStuffChart"></canvas>
                    </div>
                  </div>
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="preparedFoodChart"></canvas>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="housingChart"></canvas>
                    </div>
                  </div>
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="clothingChart"></canvas>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="medicalCareChart"></canvas>
                    </div>
                  </div>
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="educationChart"></canvas>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="transportationChart"></canvas>
                    </div>
                  </div>
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="generalChart"></canvas>
                    </div>
                  </div>
                </div>

              </div>
              <div class="tab-pane fade" id="pills-exchange" role="tabpanel" aria-labelledby="pills-exchange-tab">
                <div class="row">
                  <div class="col" style="display:flex; justify-content:center;">
                    <table class="table" cellspacing='0' cellpadding='0'>
                      <tr class="table__title">
                        <th colspan='4'>
                          <h1 align="center">EXCHANGE RATES</h1>
                        </th>
                      </tr>
                      <tr class="table__header">
                        <td></td>
                        <td>
                          <span>COUNTRY</span>
                        </td>
                        <td>
                          <span>CURRENCY</span>
                        </td>
                        <td align="right">
                          <span>EXCHANGE RATE</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/united-states.png', width='50px'>
                        </td>
                        <td>
                          <span>UNITED STATES</span>
                        </td>
                        <td>
                          <span>USD</span>
                        </td>
                        <td align="right">
                          <span>13.260,00</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/japan.png', width='50px'>
                        </td>
                        <td>
                          <span>JAPAN</span>
                        </td>
                        <td>
                          <span>JPY</span>
                        </td>
                        <td align="right">
                          <span>120,30</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/united-kingdom.png', width='50px'>
                        </td>
                        <td>
                          <span>UNITED KINGDOM</span>
                        </td>
                        <td>
                          <span>GBP</span>
                        </td>
                        <td align="right">
                          <span>17.743,16</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/switzerland.png', width='50px'>
                        </td>
                        <td>
                          <span>SWITZERLAND</span>
                        </td>
                        <td>
                          <span>CHF</span>
                        </td>
                        <td align="right">
                          <span>13.761,68</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/singapore.png', width='50px'>
                        </td>
                        <td>
                          <span>SINGAPORE</span>
                        </td>
                        <td>
                          <span>SGP</span>
                        </td>
                        <td align="right">
                          <span>9.841,15</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/malaysia.png', width='50px'>
                        </td>
                        <td>
                          <span>MALAYSIA</span>
                        </td>
                        <td>
                          <span>MYR</span>
                        </td>
                        <td align="right">
                          <span>3159,30</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/hongkong.png', width='50px'>
                        </td>
                        <td>
                          <span>HONGKONG</span>
                        </td>
                        <td>
                          <span>HKD</span>
                        </td>
                        <td align="right">
                          <span>1.697,08</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/australia.png', width='50px'>
                        </td>
                        <td>
                          <span>AUSTRALIA</span>
                        </td>
                        <td>
                          <span>AUS</span>
                        </td>
                        <td align="right">
                          <span>10.594,45</span>
                        </td>
                      </tr>
                      <tr class="table__content">
                        <td>
                          <img src='/images/flag/canada.png', width='50px'>
                        </td>
                        <td>
                          <span>CANADA</span>
                        </td>
                        <td>
                          <span>CAD</span>
                        </td>
                        <td align="right">
                          <span>10.882,97</span>
                        </td>
                      </tr>
                    </table>
                  </div>
                </div>
              </div>
              <div class="tab-pane fade" id="pills-gdp" role="tabpanel" aria-labelledby="pills-gdp-tab">
                <div class="row">
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="currentChart"></canvas>
                    </div>
                  </div>
                  <div class="col">
                    <div class="content__chart">
                      <canvas id="constantChart"></canvas>
                    </div>
                  </div>
                </div>
              </div>
              <div class="tab-pane fade" id="pills-trade" role="tabpanel" aria-labelledby="pills-trade-tab">
                <div class="row">
                  <div class="col">
                    <div class="content__chart chart-trade">
                      <span>Balance of Trade (Export)</span>
                      <center>
                        <img src="/images/scale/export.png" width="310px">
                      </center>
                    </div>
                  </div>
                  <div class="col">
                    <div class="content__chart chart-trade">
                      <span>Balance of Trade (Import)</span>
                      <center>
                        <img src="/images/scale/export.png" width="310px">
                      </center>
                    </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Optional JavaScript -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

    <!-- Angular Script -->
    <script src="/javascripts/ekonomi.js"></script>
    <script>
      Chart.defaults.global.defaultFontColor = '#000';
      Chart.defaults.global.defaultFontFamily = 'Segoe UI';
      Chart.defaults.global.defaultFontSize = 13;      
    </script>
    <script src="/javascripts/inflasi/food-stuff.js"></script>
    <script src="/javascripts/inflasi/prepared-food.js"></script>
    <script src="/javascripts/inflasi/housing.js"></script>
    <script src="/javascripts/inflasi/clothing.js"></script>
    <script src="/javascripts/inflasi/medical-care.js"></script>
    <script src="/javascripts/inflasi/education.js"></script>
    <script src="/javascripts/inflasi/transportation.js"></script>
    <script src="/javascripts/inflasi/general.js"></script>

    <script src="/javascripts/gdp/current.js"></script>
    <script src="/javascripts/gdp/constant.js"></script>
  </body>
</html>
